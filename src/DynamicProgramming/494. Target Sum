class Solution {
    public int findTargetSumWays(int[] nums, int target) {
        // Max possible sum = 1000 (nums[i] <= 1000, n <= 20)
        int offset = 1000;
        int[][] dp = new int[nums.length][2001]; 
        for (int i = 0; i < nums.length; i++)
            Arrays.fill(dp[i], Integer.MIN_VALUE);

        return solve(nums, 0, 0, target, dp, offset);
    }

    private int solve(int[] nums, int idx, int currSum, int target,
                      int[][] dp, int offset) {

        if (idx == nums.length) {
            return currSum == target ? 1 : 0;
        }

        if (dp[idx][currSum + offset] != Integer.MIN_VALUE) {
            return dp[idx][currSum + offset];
        }

        int plus = solve(nums, idx + 1, currSum + nums[idx], target, dp, offset);
        int minus = solve(nums, idx + 1, currSum - nums[idx], target, dp, offset);

        dp[idx][currSum + offset] = plus + minus;
        return dp[idx][currSum + offset];
    }
}
