class Solution {
    public int minFallingPathSum(int[][] matrix) {
        int n = matrix.length;
        int[][] dp = new int[n][n];

        for(int i=0; i< n; i++){
            dp[0][i] = matrix[0][i];
        }
        for(int i=1;i<n;i++){
            for(int j=0;j<n;j++) {
                int down = matrix[i][j] + dp[i-1][j];
                if(j==0){
                    int left = matrix[i][j] + dp[i-1][j+1];
                    dp[i][j] = Math.min(down, left);
                }
                else if(j == n-1){
                    int right = matrix[i][j] + dp[i-1][j-1];
                    dp[i][j] = Math.min(down, right);
                }
                else{
                    int left = matrix[i][j] + dp[i-1][j+1];
                    int right = matrix[i][j] + dp[i-1][j-1];

                    dp[i][j] = Math.min(down,Math.min(left, right));
                }
            }
        }
        int res = Integer.MAX_VALUE;
        for(int j=0;j<n;j++){
            res = Math.min(res, dp[n-1][j]);
        }
        return res;
    }
}

