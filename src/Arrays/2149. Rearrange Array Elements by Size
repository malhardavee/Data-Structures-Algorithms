class Solution {
    public int[] rearrangeArray(int[] nums) {
        int n = nums.length;
        int[] pos = new int[n / 2];
        int[] neg = new int[n / 2];
        int p = 0, q = 0;
        
        for (int num : nums) {
            if (num > 0) pos[p++] = num;
            else neg[q++] = num;
        }
        int[] res = new int[n];
        int i = 0, j = 0, k = 0;
        while (i < n) {
            res[i++] = pos[j++];
            res[i++] = neg[k++];
        }
        return res;
    }
}
